<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Solitario.maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Solitario.maui"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutBackground>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#304762" Offset="0.1" />
            <GradientStop Color="#558574" Offset="0.6" />
            <GradientStop Color="#73B49D" Offset="1.0" />
        </LinearGradientBrush>
    </Shell.FlyoutBackground>

    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="Label"  Class="FlyoutItemLabelStyle">
                <Setter Property="TextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Shell.TabBarIsVisible="False">

        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        <ShellContent
            Title="Informazioni"
            ContentTemplate="{DataTemplate local:InfoPage}"
            Route="InfoPage" />
    </FlyoutItem>
</Shell>
