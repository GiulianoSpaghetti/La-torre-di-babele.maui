<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Solitario.maui.GreetingsPage"
             Title="Solitario Completato"
             Background="LightBlue">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label x:Name="msgfine" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"></Label>
            <Button Text="No" x:Name="greetingsClose" Clicked="OnFine_Click" Grid.Row="4" Grid.Column="1"/>
            <Button Text="Condividi" x:Name="condividi" Clicked="greetingsShare_Click" Grid.Row="4" Grid.Column="2" />
        </Grid>
</ContentPage>